# Telegraf Configuration
#
# THIS FILE IS MANAGED BY PUPPET
#
<% if @global_tags -%>
[global_tags]
<%   @global_tags.sort.each do |key, value| -%>
  <%= key %> = "<%= value %>"
<%   end -%>
<% end -%>

[agent]
  hostname = "<%= @hostname %>"
  omit_hostname = <%= @omit_hostname %>
  interval = "<%= @interval %>"
  round_interval = <%= @round_interval %>
  metric_batch_size = <%= @metric_batch_size %>
  metric_buffer_limit = <%= @metric_buffer_limit %>
  flush_buffer_when_full = <%= @flush_buffer_when_full %>
  collection_jitter = "<%= @collection_jitter %>"
  flush_interval = "<%= @flush_interval %>"
  flush_jitter = "<%= @flush_jitter %>"
  logfile = "<%= @logfile %>"
  debug = <%= @debug %>
  quiet = <%= @quiet %>

<% if @_outputs -%>
#
# OUTPUTS:
#
<%   @_outputs.sort.each do | outputname, options | -%>
[[outputs.<%= ( options.is_a? Hash and options.has_key? 'plugin_type' ) ? options['plugin_type'] : outputname %>]] # <%= outputname %>
<%        unless options['options'].empty? -%>
<%              options['options'].sort.each do | option, value | -%>
  <%= option -%> = <% if value.is_a?(String) %>"<%= value %>"<% elsif value.is_a?(Array) %><%= value.inspect %><% else %><%= value %><% end %>
<%              end -%>
<%        end unless options.nil? or options['options'].nil? -%>
<%   end -%>
<% end -%>

<% if @_inputs -%>
#
# INPUTS:
#
<%   @_inputs.sort.each do | inputname, options | -%>
[[inputs.<%= ( options.is_a? Hash and options.has_key? 'plugin_type' ) ? options['plugin_type'] : inputname %>]] # <%= inputname %>
<%        unless options['options'].empty? -%>
<%              options['options'].sort.each do | option, value | -%>
  <%= option -%> = <% if value.is_a?(String) %>"<%= value %>"<% elsif value.is_a?(Array) %><%= value.inspect %><% else %><%= value %><% end %>
<%              end -%>
<%        end unless options.nil? or options['options'].nil? -%>
<%   end -%>
<% end -%>
